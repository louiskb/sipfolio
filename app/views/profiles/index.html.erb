<!-- Where users can find other users and see their profiles, number of achievements, most recent achievement, badges, XP, levels, and the ability to follow. -->
<%= render "index_banner" %>
<div class="container">
  <h2 class="mt-5 mb-3">User Profiles</h2>
  <p class="mb-5">Check out other user profiles and follow them for new cocktail recipes.</p>
  <% @profiles.each do |profile| %>
    <!-- Display the list of users in cards -->
    <!-- Each card will have more user information like user stats, achievements, level, and badges etc. -->
    <!-- Add a search bar and make it functional later -->
    <div class="card card-profile w-75 mb-4">
      <div class="card-body p-4">
        <div class="d-flex justify-content-start align-items-start">
          <%= image_tag "happy-dog5.png", alt: "User avatar image", class: "avatar me-3" %>
          <h3 class="card-title purple-font"><%= profile.user.username %></h3>
          <!-- Follow button -->
          <!-- If user is not followed -->
          <%= link_to "#", class: "btn btn-outline-light btn-sm rounded-4 ms-3" do %>
            <i class="fa-solid fa-user-plus"></i> Follow
          <% end %>
          <!-- If user is already followed -->
          <%#= link_to "#", class: "btn btn-outline-success btn-sm rounded-4 ms-3" do %>
            <!-- <i class="fa-solid fa-user-check"></i> Following -->
          <%# end %>
          <!-- Unfollow button that appears when hovering over  "Following" button -->
          <%#= link_to "#", class: "btn btn-outline-danger btn-sm rounded-4 ms-3" do %>
            <!-- <i class="fa-solid fa-user-xmark"></i> Unfollow <%#= profile.user.username %> -->
          <%# end %>
        </div>
        <p class="card-text text-light mt-4">
          <%= profile.bio || "Mixologist" %>
        </p>
        <!-- View Profile button -->
        <%= link_to "View Profile", profile_path(profile), class: "btn btn-primary rounded-4 mt-4" %>
      </div>
    </div>
  <% end %>
</div>
